{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Ports": {
    "Api": 5100,
    "BlazorHttp": 5124,
    "BlazorHttps": 7082,
    "MongoDb": 27017
  },
  "ApiSettings": {
    "ApiKey": "test-api-key-123"
  },
  "MongoDb": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "TestFinancialMonitoring",
    "CollectionName": "transactions"
  },
  "ApplicationInsights": {
    "ConnectionString": "InstrumentationKey=test-key;IngestionEndpoint=https://test.in.applicationinsights.azure.com/"
  },
  "CacheSettings": {
    "TransactionCacheSeconds": 0,
    "TransactionByIdCacheSeconds": 0,
    "AnomalousTransactionCacheSeconds": 0,
    "AnalyticsCacheSeconds": 0,
    "TimeSeriesCacheSeconds": 0,
    "BasePolicyCacheSeconds": 0
  },
  "ResponseCacheSettings": {
    "MaximumBodySizeMB": 1,
    "SizeLimitMB": 10,
    "UseCaseSensitivePaths": false
  },
  "RateLimitSettings": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "HttpStatusCode": 429,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "GeneralRules": [
      {
        "Endpoint": "*/oauth/token",
        "Period": "1m",
        "Limit": 10
      },
      {
        "Endpoint": "*/oauth/clients",
        "Period": "1m",
        "Limit": 20
      },
      {
        "Endpoint": "*/transactions",
        "Period": "1m",
        "Limit": 50
      },
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      }
    ]
  },
  "JwtSettings": {
    "Issuer": "TestIssuer",
    "Audience": "TestAudience",
    "SecretKey": "test-secret-key-that-is-very-long-for-hmac-sha256",
    "AccessTokenExpiryMinutes": 15,
    "RefreshTokenExpiryDays": 7,
    "ClockSkewMinutes": 5,
    "RequireHttps": false,
    "ValidateLifetime": true,
    "ValidateIssuer": true,
    "ValidateAudience": true
  },
  "Cors": {
    "AllowedHeaders": ["X-Api-Key"],
    "AllowedMethods": ["GET", "POST", "PUT", "DELETE"],
    "AllowCredentials": true
  },
  "AllowedOrigins": [
    "http://localhost",
    "https://localhost"
  ]
}
