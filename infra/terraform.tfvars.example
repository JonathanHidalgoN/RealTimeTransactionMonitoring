# Terraform Variables Configuration
# Copy this file to terraform.tfvars and update values

# Required: Your Azure AD user object ID for Key Vault access
admin_user_object_id = "your-object-id-here"

# Optional: Choose deployment architecture
# "aks" = Full AKS deployment (production-ready, higher cost)
# "containerapp" = Azure Container Apps (cost-optimized, scales to zero)
deployment_architecture = "aks"

# Optional: Override default resource prefix
# resource_prefix = "finmon"

# Optional: Override default location
# azure_location = "mexicocentral"

# Cost optimization settings
enable_cost_optimization = true  # Enables smaller VM sizes, auto-scaling to 0
development_mode = true          # Reduces redundancy for cost savings
